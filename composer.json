{
  "name": "jawira/mini-getopt",
  "description": "Very simple wrapper for getopt() function",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "getopt",
    "cli",
    "option",
    "terminal"
  ],
  "authors": [
    {
      "name": "Jawira Portugal",
      "email": "dev@tugal.be"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-mbstring": "*",
    "jawira/the-lost-functions": "^1.4"
  },
  "require-dev": {
    "behat/behat": "^3.8",
    "jawira/skeleton": "^2.7",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.10"
  },
  "suggest": {
    "pds/skeleton": "Standard PHP package skeleton",
    "phing/phing": "PHP Build Tool"
  },
  "autoload": {
    "psr-4": {
      "Jawira\\MiniGetopt\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jawira\\MiniGetoptTests\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    },
    "platform-check": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
