{
  "name": "jawira/mini-getopt",
  "type": "library",
  "description": "Very simple wrapper for getopt() function",
  "keywords": [
    "getopt",
    "cli",
    "option",
    "terminal"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Jawira Portugal",
      "email": "dev@tugal.be"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "behat/behat": "^3.8",
    "ergebnis/composer-normalize": "^2.15",
    "jawira/skeleton": "^2.7",
    "phpstan/phpstan": "^0.12.56"
  },
  "suggest": {
    "pds/skeleton": "Standard PHP package skeleton",
    "phing/phing": "PHP Build Tool"
  },
  "config": {
    "platform-check": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Jawira\\MiniGetopt\\": "src/"
    }
  }
}
